package main
import "fmt"
func main() {
    var number int //переменная для хранения числа
    fmt.Print("введите число: ")
    fmt.Scan(&number) //чтение числа и запись значения
    if number % 2 == 0 { //проверка четности.помощь остаток от деления % (число 2 делиться без остатка оно чётное)
        fmt.Printf("число %d является чётным\n", number)
    } else {
        fmt.Printf("число %d является нечётным\n", number)
    }
}
